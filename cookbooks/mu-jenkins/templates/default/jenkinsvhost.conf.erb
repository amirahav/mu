<Proxy *>
        Order allow,deny
        Allow from all
</Proxy>

<VirtualHost *:<%= @params[:apache_port] %>>
        ServerAdmin test@test.com
        ProxyPass / http://localhost:<%= @params[:jenkins_port] %>/
        ProxyPassReverse / http://localhost:<%= @params[:jenkins_port] %>/
        SSLEngine On
        SSLCertificateFile /etc/httpd/ssl/nagios.crt
        SSLCertificateKeyFile /etc/httpd/ssl/nagios.key
        SSLProxyEngine on

        CustomLog /var/log/jenkins-ssl-access.log combined
        ErrorLog /var/log/jenkins-error.log
  LogLevel debug
</VirtualHost>

