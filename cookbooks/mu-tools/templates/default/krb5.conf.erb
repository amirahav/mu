[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log

[libdefaults]
 default_realm = <%= node.ad.domain_name.upcase %>
 dns_lookup_realm = true
 dns_lookup_kdc = true
 ticket_lifetime = 48h
 renew_lifetime = 7d
 forwardable = true

[realms]
 <%= node.ad.domain_name.upcase %> = {
<% node.ad.dcs.each do |dc| %>
  kdc = <%= dc %>
<% end %>
 }

[domain_realm]
 <%= node.ad.domain_name.downcase %> = <%= node.ad.domain_name.upcase %>
 .<%= node.ad.domain_name.downcase %> = <%= node.ad.domain_name.upcase %>
